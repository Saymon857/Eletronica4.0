#include <stdio.h>

int main(void)
{
    float km, milhas;
    
    printf("Entre com o número de milhas:");
    scanf("%f%*c",&milhas);
    km = milhas * 1.1609;
    printf("%f milhas iguais a %f quilomêtros\n", milhas, km);
    return 0;
}