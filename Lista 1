4.3
#include <stdio.h>

int main(void)
{
  int numero1,numero2;
  printf("digite dois numeros inteiros: ");
  scanf("%d%d*c",&numero1, &numero2);
  printf("Os números inteiros são %d e %d",numero1,numero2);
  return 0;  
}
