4.4
#include <stdio.h>

int main(void)
{
     int num1,num2,soma,produto;
    printf("Escreva dois números: ");
    scanf("%d%d",&num1,&num2);
    soma = num1 + num2;
    produto = num1 * num2;
    printf("O produto dos dois numeros é %d e a soma dos mesmos é %d",produto,soma);
    return 0;
}
